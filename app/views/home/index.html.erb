<div class="row">
  <div class="col-12">
    <h1 class="mb-4">Welcome to Acme Widget Co</h1>
    <p class="lead">Discover our amazing products and special offers!</p>
  </div>
</div>

<div class="row">
  <% @product_catalogues.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= product.product_name %></h5>
          <p class="card-text">
            <strong>Code:</strong> <%= product.code %><br>
            <strong>Price:</strong> $<%= sprintf("%.2f", product.price) %>
          </p>
          <% if product.image_url.present? %>
            <img src="<%= product.image_url %>" class="card-img-top mb-3" alt="<%= product.product_name %>" style="height: 200px; object-fit: cover;">
          <% end %>
          
          <!-- Offers Section -->
          <% if product.offers.any? %>
            <div class="mb-3">
              <h6 class="text-success">Special Offers:</h6>
              <% product.offers.each do |offer| %>
                <div class="alert alert-info py-2 mb-2">
                  <small>
                    <strong><%= offer.description %></strong><br>
                    Offer Price: $<%= sprintf("%.2f", offer.offer_price) %>
                  </small>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <div class="mt-auto">
            <%= form_with url: add_baskets_path, method: :post, local: true, class: "d-inline w-100" do |form| %>
              <%= form.hidden_field :product_code, value: product.code %>
              <%= form.submit "Add to Basket", 
                  class: "btn btn-primary w-100",
                  data: { 
                    confirm: "Add #{product.product_name} to basket for $#{sprintf("%.2f", product.price)}?" 
                  } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row mt-4">
  <div class="col-12">
    <%= link_to "View Basket", baskets_path, class: "btn btn-success" %>
  </div>
</div>