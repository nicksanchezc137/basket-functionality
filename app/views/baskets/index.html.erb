<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Shopping Basket</h1>
    </div>
  </div>
  
  <% if @basket_line_items.any? %>
    <div class="row">
      <div class="col-12">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead class="table-dark">
              <tr>
                <th>Product</th>
                <th>Code</th>
                <th>Price</th>
                <th>Offer Applied</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @basket_line_items.each do |line_item| %>
                <tr>
                  <td>
                    <% if line_item.offer %>
                      <strong class="text-success"><%= line_item.offer.description %></strong>
                      <br>
                      <small class="text-muted">Offer for: <%= line_item.product_catalogue.product_name %></small>
                    <% else %>
                      <strong><%= line_item.product_catalogue.product_name %></strong>
                      <% if line_item.product_catalogue.image_url.present? %>
                        <br>
                        <img src="<%= line_item.product_catalogue.image_url %>" 
                             alt="<%= line_item.product_catalogue.product_name %>" 
                             style="width: 50px; height: 50px; object-fit: cover;" 
                             class="mt-2">
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <% if line_item.offer %>
                      -
                    <% else %>
                      <%= line_item.product_catalogue.code %>
                    <% end %>
                  </td>
                  <td>$<%= sprintf("%.2f", line_item.price) %></td>
                  <td>
                    <% if line_item.offer %>
                      <span class="badge bg-success">
                        <%= line_item.offer.description %> - $<%= sprintf("%.2f", line_item.offer.offer_price) %>
                      </span>
                      <br>
                      <small class="text-muted">Trigger: <%= line_item.offer.trigger_count %> items</small>
                    <% else %>
                      <span class="text-muted">No offer</span>
                    <% end %>
                  </td>
                  <td>
                    <% unless line_item.offer %>
                      <%= form_with model: line_item, method: :delete, local: true, class: "d-inline" do |form| %>
                        <%= form.submit "Remove", 
                            class: "btn btn-danger btn-sm",
                            data: { confirm: "Remove #{line_item.product_catalogue.product_name} from basket?" } %>
                      <% end %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <div class="row mt-4">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Basket Summary</h5>
            <div class="row">
              <div class="col-6">
                <p class="card-text">
                  <strong>Total Items:</strong> <%= @basket_line_items.count %><br>
                  <strong>Subtotal:</strong> $<%= sprintf("%.2f", @basket_total) %><br>
                  <strong>Delivery:</strong> $<%= sprintf("%.2f", @delivery_charge) %><br>
                  <hr>
                  <strong>Total:</strong> $<%= sprintf("%.2f", @final_total) %>
                </p>
              </div>
              <div class="col-6">
                <% if @delivery_charge > 0 %>
                  <div class="alert alert-info">
                    <small>
                      <strong>Delivery Information:</strong><br>
                      Delivery charge applied based on order value.
                    </small>
                  </div>
                <% else %>
                  <div class="alert alert-success">
                    <small>
                      <strong>Free Delivery!</strong><br>
                      Your order qualifies for free delivery.
                    </small>
                  </div>
                <% end %>
              </div>
            </div>
            <%= link_to "Continue Shopping", root_path, class: "btn btn-primary" %>
            <%= link_to "Checkout", "#", class: "btn btn-success" %>
            <% if @basket %>
              <%= form_with model: @basket, method: :delete, local: true, class: "d-inline ms-2" do |form| %>
                <%= form.submit "Delete Basket", 
                    class: "btn btn-danger",
                    data: { confirm: "Are you sure you want to delete the entire basket? This action cannot be undone." } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-12">
        <div class="alert alert-info text-center">
          <h4>Your basket is empty</h4>
          <p>Start shopping by adding some products to your basket!</p>
          <%= link_to "Browse Products", root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
